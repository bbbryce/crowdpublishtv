<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) + " " + @user.name %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", "application", 'data-turbolinks-track' => true %>
  <link rel="shortcut icon" type="favicon.ico" href="http://www.crowdpublish.tv/assets/crowdPublishIcon.png"/>
  <%= csrf_meta_tags %>

  <% if Rails.env.development? || Rails.env.test? %>
    <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %> 
  <% else %>
    <%= tag :meta, :name => "stripe-key", :content => ENV['STRIPE_PUBLIC_KEY'] %> 
  <% end %>
  
  <% if content_for? :forusers %>
    <%= yield :forusers %>
  <% end %>

    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>

<body>
  <center >
    <div class="container">
      <div class="row">
        <%= render 'layouts/authorform' %>
      </div> 
      <div class="row">
        <div class="col-xl-2 col-lg-2" >
          <%= render 'layouts/sidebar' %>
        </div> 
        <div class="col-xl-10 col-lg-10" >
          <%= yield %>
        </div> 
      </div> 
    <%= render 'layouts/footer' %>    
    </div> 
  </center>

</body>
</html>
